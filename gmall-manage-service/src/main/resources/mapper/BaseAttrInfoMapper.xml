<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.gmall0416.manage.mapper.BaseAttrInfoMapper">
    <!--结果集映射-->
    <resultMap id="baseAttrInfoMap" type="com.atguigu.gmall0416.bean.BaseAttrInfo" autoMapping="true">
        <!--id:表示主键 column:表示数据库的字段名 property：实体类的属性名-->
        <id column="id" property="id"></id>
        <!--实体类中有个attrValueList如何表示 1对多，多对多，1对1，多对1-->
        <collection property="attrValueList" ofType="com.atguigu.gmall0416.bean.BaseAttrValue" autoMapping="true">
            <id property="id" column="attr_value_id"></id>
        </collection>
    </resultMap>
    <select id="getBaseAttrInfoListByCatalog3Id" resultMap="baseAttrInfoMap">
      SELECT
           bai.id,
           bai.attr_name,
           bai.catalog3_id,
           bav.id attr_value_id,
           bav.value_name,
           bav.attr_id
        FROM
           base_attr_info bai
        INNER JOIN base_attr_value bav ON bai.id = bav.attr_id
        WHERE
           catalog3_id = #{0}
    </select>

    <select id="selectAttrInfoListByIds" resultMap="baseAttrInfoMap">
        SELECT ai.id,ai.attr_name,ai.catalog3_id, av.id attr_value_id ,av.attr_id ,av.value_name
        FROM base_attr_info ai INNER JOIN base_attr_value av ON ai.id=av.attr_id
        WHERE av.id IN (${valueIds})
    </select>
</mapper>
